<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Existing scripts
    const navbarToggler = document.querySelector(".navbar-toggler");
    const navbarCollapse = document.querySelector("#navbarNavAltMarkup");

    // Add scroll effect to navbar
    window.addEventListener("scroll", function () {
      const navbar = document.querySelector(".navbar");
      if (window.scrollY > 50) {
        navbar.classList.add("shadow");
      } else {
        navbar.classList.remove("shadow");
      }
    });

    navbarToggler.addEventListener("click", function () {
      if (navbarCollapse.classList.contains("show")) {
        navbarCollapse.classList.remove("blur-background");
      } else {
        navbarCollapse.classList.add("blur-background");
      }
    });

    navbarCollapse.addEventListener("hidden.bs.collapse", function () {
      navbarCollapse.classList.remove("blur-background");
    });

    navbarCollapse.addEventListener("shown.bs.collapse", function () {
      navbarCollapse.classList.add("blur-background");
    }); // Add search focus behavior
    const searchInput = document.querySelector(".search-input");
    const inputGroup = document.querySelector(".input-group");

    if (searchInput && inputGroup) {
      searchInput.addEventListener("focus", function () {
        inputGroup.classList.add("search-focused");
      });

      searchInput.addEventListener("blur", function () {
        inputGroup.classList.remove("search-focused");
      });
    }

    // Improve mobile navigation experience
    const navLinks = document.querySelectorAll(".nav-link");
    const isSmallScreen = window.innerWidth < 992;

    if (isSmallScreen) {
      navLinks.forEach((link) => {
        link.addEventListener("click", function () {
          // Add a slight delay before navigating to show the tap effect
          const href = this.getAttribute("href");
          if (href && href !== "#") {
            this.classList.add("active");
            setTimeout(() => {
              window.location.href = href;
            }, 150);
          }
        });
      });
    }

    // Adjust nav sections on window resize
    function adjustNavLayout() {
      const isSmallScreen = window.innerWidth < 992;
      const navSections = document.querySelectorAll(".nav-section");

      if (isSmallScreen) {
        navSections.forEach((section) => {
          section.classList.add("justify-content-center");
        });
      } else {
        navSections.forEach((section) => {
          section.classList.remove("justify-content-center");
        });
      }
    }

    // Initial call and add resize listener
    adjustNavLayout();
    window.addEventListener("resize", adjustNavLayout);
  });
</script>
