<script>
  /**
   * Modern Footer Controller
   * Handles newsletter signup, preference dropdowns, and interactive animations
   */
  class FooterController {
    constructor() {
      this.init();
    }
    init() {
      this.setupNewsletterForm();
      this.setupSocialLinks();
      this.setupScrollAnimations();
    }

    /**
     * Newsletter form handling
     */
    setupNewsletterForm() {
      const form = document.querySelector(".newsletter-form");
      const input = document.querySelector(".newsletter-input");
      const button = document.querySelector(".newsletter-btn");

      if (!form || !input || !button) return;

      // Form submission
      form.addEventListener("submit", async (e) => {
        e.preventDefault();
        await this.handleNewsletterSubmission(input, button);
      });

      // Input focus effects
      input.addEventListener("focus", () => {
        input.closest(".newsletter-input-group").style.transform =
          "scale(1.02)";
      });

      input.addEventListener("blur", () => {
        input.closest(".newsletter-input-group").style.transform = "scale(1)";
      });

      // Real-time validation
      input.addEventListener("input", () => {
        this.validateEmail(input);
      });
    }

    /**
     * Handle newsletter form submission
     */
    async handleNewsletterSubmission(input, button) {
      const email = input.value.trim();

      if (!this.isValidEmail(email)) {
        this.showFormMessage("Please enter a valid email address", "error");
        return;
      }

      // Button loading state
      const originalText = button.innerHTML;
      button.innerHTML =
        '<i class="fas fa-spinner fa-spin"></i> <span>Subscribing...</span>';
      button.disabled = true;

      try {
        // Simulate API call
        await new Promise((resolve) => setTimeout(resolve, 1500)); // Success state
        button.innerHTML =
          '<i class="fas fa-check"></i> <span>Subscribed!</span>';
        button.style.background = "var(--success-color, #10b981)";
        input.value = "";

        this.showFormMessage(
          "Thank you for subscribing to our newsletter!",
          "success"
        );

        // Reset button after 3 seconds
        setTimeout(() => {
          button.innerHTML = originalText;
          button.style.background = "var(--text-dark, #222)";
          button.disabled = false;
        }, 3000);
      } catch (error) {
        // Error state
        button.innerHTML =
          '<i class="fas fa-exclamation-triangle"></i> <span>Try Again</span>';
        button.style.background = "var(--error-color, #ef4444)";
        this.showFormMessage(
          "Something went wrong. Please try again.",
          "error"
        );

        // Reset button after 3 seconds
        setTimeout(() => {
          button.innerHTML = originalText;
          button.style.background = "var(--text-dark, #222)";
          button.disabled = false;
        }, 3000);
      }
    }

    /**
     * Email validation
     */
    validateEmail(input) {
      const email = input.value.trim();
      const isValid = this.isValidEmail(email);
      if (email && !isValid) {
        input.style.borderColor = "var(--error-color, #ef4444)";
        input.style.boxShadow =
          "0 0 0 0.25rem var(--error-light, rgba(239, 68, 68, 0.15))";
      } else {
        input.style.borderColor = "var(--border-color, #ced4da)";
        input.style.boxShadow =
          "var(--shadow-xs, 0 2px 8px rgba(0, 0, 0, 0.05))";
      }

      return isValid;
    }

    isValidEmail(email) {
      return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
    }

    /**
     * Show form messages
     */
    showFormMessage(message, type) {
      // Remove existing messages
      const existingMessage = document.querySelector(".newsletter-message");
      if (existingMessage) {
        existingMessage.remove();
      }

      // Create new message
      const messageEl = document.createElement("div");
      messageEl.className = `newsletter-message ${type}`;
      messageEl.textContent = message;
      messageEl.style.cssText = `
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      margin-top: 0.5rem;
      padding: 0.75rem 1rem;
      border-radius: 8px;
      font-size: 0.9rem;
      font-weight: 500;
      text-align: center;
      z-index: 10;
      opacity: 0;
      transform: translateY(-10px);
      transition: all 0.3s ease;
      ${
        type === "success"
          ? "background: #d1fae5; color: #065f46; border: 1px solid #a7f3d0;"
          : "background: #fee2e2; color: #991b1b; border: 1px solid #fecaca;"
      }
    `;

      document.querySelector(".newsletter-form").appendChild(messageEl);

      // Animate in
      requestAnimationFrame(() => {
        messageEl.style.opacity = "1";
        messageEl.style.transform = "translateY(0)";
      });

      // Remove after 5 seconds
      setTimeout(() => {
        messageEl.style.opacity = "0";
        messageEl.style.transform = "translateY(-10px)";
        setTimeout(() => messageEl.remove(), 300);
      }, 5000);
    }

    /**
     * Social links with tracking
     */
    setupSocialLinks() {
      const socialLinks = document.querySelectorAll(".social-link");

      socialLinks.forEach((link) => {
        link.addEventListener("click", (e) => {
          e.preventDefault();
          const platform = this.getSocialPlatform(link);
          this.trackSocialClick(platform);

          // Add click animation
          link.style.transform = "scale(0.95)";
          setTimeout(() => {
            link.style.transform = "translateY(-3px) scale(1.05)";
          }, 150);
        });
      });
    }

    getSocialPlatform(link) {
      if (link.classList.contains("facebook")) return "facebook";
      if (link.classList.contains("twitter")) return "twitter";
      if (link.classList.contains("instagram")) return "instagram";
      if (link.classList.contains("linkedin")) return "linkedin";
      return "unknown";
    }

    trackSocialClick(platform) {
      console.log(`Social media click tracked: ${platform}`);
      // Here you would typically send analytics data
    }

    /**
     * Scroll animations for footer elements
     */
    setupScrollAnimations() {
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              this.animateFooterSection(entry.target);
            }
          });
        },
        {
          threshold: 0.1,
          rootMargin: "50px",
        }
      );

      // Observe footer sections
      const sections = document.querySelectorAll(
        ".footer-brand-section, .footer-links-section"
      );
      sections.forEach((section) => {
        section.style.opacity = "0";
        section.style.transform = "translateY(30px)";
        section.style.transition = "all 0.6s ease";
        observer.observe(section);
      });
    }

    animateFooterSection(section) {
      section.style.opacity = "1";
      section.style.transform = "translateY(0)";
    }

    /**
     * Ripple effect for buttons
     */
    createRipple(event, element) {
      const ripple = document.createElement("span");
      const rect = element.getBoundingClientRect();
      const size = Math.max(rect.width, rect.height);
      const x = event.clientX - rect.left - size / 2;
      const y = event.clientY - rect.top - size / 2;

      ripple.style.cssText = `
      position: absolute;
      width: ${size}px;
      height: ${size}px;
      left: ${x}px;
      top: ${y}px;
      background: rgba(255, 255, 255, 0.3);
      border-radius: 50%;
      transform: scale(0);
      animation: ripple 0.6s ease-out;
      pointer-events: none;
    `;

      // Add ripple keyframes if not already added
      if (!document.querySelector("#ripple-styles")) {
        const style = document.createElement("style");
        style.id = "ripple-styles";
        style.textContent = `
        @keyframes ripple {
          to {
            transform: scale(2);
            opacity: 0;
          }
        }
      `;
        document.head.appendChild(style);
      }

      element.style.position = "relative";
      element.style.overflow = "hidden";
      element.appendChild(ripple);

      setTimeout(() => ripple.remove(), 600);
    }
  }

  // Initialize footer when DOM is loaded
  document.addEventListener("DOMContentLoaded", () => {
    new FooterController();
  });
</script>
