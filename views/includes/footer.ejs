    /**
     * Setup scroll animations with IntersectionObserver for performance
     */
    setupScrollAnimations() {
      // Skip animation for users who prefer reduced motion
      if (window.matchMedia("(prefers-reduced-motion: reduce)").matches) {
        this.footerSections.forEach((section) => {
          section.style.opacity = "1";
          section.style.transform = "none";
        });
        return;
      }

      // Create the intersection observer
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              this.animateFooterSection(entry.target);
              // Unobserve after animation to improve performance
              observer.unobserve(entry.target);
            }
          });
        },
        {
          threshold: 0.15,
          rootMargin: "30px",
        }
      );

      // Set initial state and observe sections
      this.footerSections.forEach((section) => {
        section.style.opacity = "0";
        section.style.transform = "translateY(20px)";
        section.style.transition = "opacity 0.5s ease, transform 0.5s ease";
        observer.observe(section);
      });
    }

    /**
     * Animate footer section when it comes into view
     */
    animateFooterSection(section) {
      section.style.opacity = "1";
      section.style.transform = "translateY(0)";
    }

    /**
     * Add accessibility enhancements
     */
    setupAccessibilityEnhancements() {
      // Add aria-labels to interactive elements where needed
      const interactiveElements = document.querySelectorAll(
        ".footer-link:not([aria-label]), .legal-link:not([aria-label])"
      );
      interactiveElements.forEach((el) => {
        if (el.textContent.trim()) {
          // Only set if there's no existing aria-label
          if (!el.getAttribute("aria-label")) {
            el.setAttribute("aria-label", el.textContent.trim());
          }
        }
      });
    }
  }

