<div class="listing-detail-container">
  <!-- Listing Gallery Section -->
  <section class="listing-gallery">
    <div class="container">
      <nav aria-label="breadcrumb" class="listing-breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/listings">Listings</a></li>
          <li class="breadcrumb-item">
            <a href="#"><%= listing.country %></a>
          </li>
          <li class="breadcrumb-item active" aria-current="page">
            <%= listing.location %>
          </li>
        </ol>
      </nav>

      <div class="gallery-container">
        <div class="main-image">
          <img src="<%= listing.image.url %>" alt="<%= listing.title %>" />
        </div>
      </div>
    </div>
  </section>

  <!-- Listing Information Section -->
  <section class="listing-info">
    <div class="container">
      <div class="row">
        <!-- Main Content - Full Width -->
        <div class="col-12">
          <div class="listing-header">
            <h1 class="listing-title"><%= listing.title %></h1>
            <div class="listing-subheader">
              <div class="listing-meta">
                <span class="rating">
                  <i class="fa-solid fa-star"></i> 4.85
                </span>
                <span class="reviews-count">(42 reviews)</span>
                <span class="location-badge">
                  <i class="fa-solid fa-location-dot me-1"></i> <%=
                  listing.location %>, <%= listing.country %>
                </span>
              </div>
            </div>
          </div>

          <div class="listing-host mt-4">
            <div class="host-info">
              <p class="host-label">
                Entire home hosted by
                <span class="host-name"><%= listing.owner.username %></span>
              </p>
            </div>
            <div class="host-avatar">
              <i class="fa-solid fa-user-circle fa-2x"></i>
            </div>
          </div>

          <hr class="divider" />

          <div class="listing-highlights">
            <div class="highlight-item">
              <div class="highlight-icon">
                <i class="fa-solid fa-medal"></i>
              </div>
              <div class="highlight-info">
                <h3>Experienced host</h3>
                <p>
                  <%= listing.owner.username %> has received excellent reviews
                </p>
              </div>
            </div>
            <div class="highlight-item">
              <div class="highlight-icon">
                <i class="fa-solid fa-location-dot"></i>
              </div>
              <div class="highlight-info">
                <h3>Great location</h3>
                <p>95% of guests gave the location a 5-star rating</p>
              </div>
            </div>
            <div class="highlight-item">
              <div class="highlight-icon">
                <i class="fa-solid fa-key"></i>
              </div>
              <div class="highlight-info">
                <h3>Self check-in</h3>
                <p>Check yourself in with the keypad</p>
              </div>
            </div>
          </div>

          <hr class="divider" />

          <div class="listing-description">
            <h2>About this place</h2>
            <div class="description-text">
              <p><%= listing.description %></p>
            </div>
          </div>

          <hr class="divider" />

          <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
          <div class="owner-actions mb-4">
            <h3>Listing Management</h3>
            <div class="btn-group">
              <a
                href="/listings/<%= listing._id %>/edit"
                class="btn btn-outline-primary"
              >
                <i class="fa-solid fa-edit me-1"></i> Edit Listing
              </a>
              <form
                method="POST"
                action="/listings/<%= listing._id %>?_method=DELETE"
                class="d-inline"
              >
                <button class="btn btn-outline-danger">
                  <i class="fa-solid fa-trash-alt me-1"></i> Delete Listing
                </button>
              </form>
            </div>
          </div>
          <% } %>

          <!-- Things to Know (Inline) -->
          <div class="things-to-know-inline mb-5">
            <h3 class="mb-4">Things to know</h3>
            <div class="row">
              <div class="col-md-4 mb-4 mb-md-0">
                <h4>House rules</h4>
                <ul class="info-list">
                  <li>Check-in: After 2:00 PM</li>
                  <li>Checkout: 11:00 AM</li>
                  <li>No smoking</li>
                  <li>No pets</li>
                </ul>
              </div>
              <div class="col-md-4 mb-4 mb-md-0">
                <h4>Safety & property</h4>
                <ul class="info-list">
                  <li>Carbon monoxide alarm</li>
                  <li>Smoke alarm</li>
                  <li>Security cameras on property</li>
                </ul>
              </div>
              <div class="col-md-4">
                <h4>Cancellation policy</h4>
                <ul class="info-list">
                  <li>
                    Free cancellation before <%= new Date(Date.now() +
                    604800000).toLocaleDateString('en-US', { month: 'short',
                    day: 'numeric' }) %>
                  </li>
                  <li>Review the host's full cancellation policy</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Reviews and Map Section -->
  <section class="listing-details">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <!-- Map Section -->
          <div class="listing-map">
            <h2>Where you'll be</h2>
            <div class="location-info">
              <p>
                <i class="fa-solid fa-location-dot me-2"></i><%=
                listing.location %>, <%= listing.country %>
              </p>
            </div>
            <div id="map" class="property-map"></div>
          </div>

          <hr class="divider" />

          <!-- Reviews Section -->
          <div class="listing-reviews">
            <% if(listing.reviews.length > 0) { %>
            <div class="reviews-list">
              <% for(let review of listing.reviews) { %>
              <div class="review-item">
                <div class="review-header">
                  <div class="reviewer-info">
                    <div class="reviewer-avatar">
                      <i class="fa-solid fa-user-circle fa-2x"></i>
                    </div>
                    <div class="reviewer-details">
                      <h4><%= review.author.username %></h4>
                      <span class="review-date">June 2025</span>
                    </div>
                  </div>
                </div>
                <div class="review-content">
                  <p
                    class="starability-result"
                    data-rating="<%= review.rating %>"
                  ></p>
                  <p class="review-text"><%= review.comment %></p>
                  <% if(currUser && review.author._id.equals(currUser._id)) { %>
                  <form
                    method="post"
                    action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                  >
                    <button class="btn btn-sm btn-outline-danger">
                      <i class="fa-solid fa-trash-alt me-1"></i> Delete
                    </button>
                  </form>
                  <% } %>
                </div>
              </div>
              <% } %>
            </div>

            <% } %> <% if(currUser) { %>
            <div class="add-review">
              <h3>Leave a review</h3>
              <form
                action="/listings/<%= listing.id %>/reviews"
                method="post"
                novalidate
                class="needs-validation review-form"
              >
                <div class="mb-3">
                  <label for="rating" class="form-label">Rating</label>
                  <fieldset class="starability-slot">
                    <input
                      type="radio"
                      id="no-rate"
                      class="input-no-rate"
                      name="review[rating]"
                      value="1"
                      checked
                      aria-label="No rating."
                    />
                    <input
                      type="radio"
                      id="first-rate1"
                      name="review[rating]"
                      value="1"
                    />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input
                      type="radio"
                      id="first-rate2"
                      name="review[rating]"
                      value="2"
                    />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input
                      type="radio"
                      id="first-rate3"
                      name="review[rating]"
                      value="3"
                    />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input
                      type="radio"
                      id="first-rate4"
                      name="review[rating]"
                      value="4"
                    />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input
                      type="radio"
                      id="first-rate5"
                      name="review[rating]"
                      value="5"
                    />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>
                </div>
                <div class="mb-3">
                  <label for="comment" class="form-label"
                    >Your experience</label
                  >
                  <textarea
                    name="review[comment]"
                    id="comment"
                    class="form-control"
                    rows="4"
                    placeholder="Tell others about your stay..."
                    required
                  ></textarea>
                  <div class="invalid-feedback">
                    Please share your experience about this place
                  </div>
                </div>
                <button type="submit" class="btn btn-primary">
                  Submit review
                </button>
              </form>
            </div>
            <% } else { %>
            <div class="login-to-review">
              <p>
                Want to leave a review?
                <a href="/login" class="text-primary">Log in</a> or
