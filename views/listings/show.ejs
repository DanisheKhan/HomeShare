    border-radius: var(--radius-lg);
    margin-bottom: 2rem;
    border: 1px solid var(--border-light);
  }

  .overall-rating {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .overall-rating-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-dark);
  }

  .overall-rating i {
    color: #ffb700;
    font-size: 1.25rem;
  }

  .reviews-count {
    font-size: 1.1rem;
    color: var(--text-secondary);
    font-weight: 500;
  }

  .rating-display {
    margin-bottom: 0.75rem;
  }

  .review-text-container {
    background-color: white;
    padding: 1rem 1.25rem;
    border-radius: var(--radius-md);
    margin-top: 0.5rem;
    position: relative;
  }

  .review-text-container::before {
    content: '"';
    position: absolute;
    top: -5px;
    left: 0.5rem;
    font-size: 2rem;
    color: var(--primary-color);
    opacity: 0.2;
    font-family: Georgia, serif;
  }

  .review-actions {
    display: flex;
    justify-content: flex-end;
    margin-top: 1rem;
  }

  .review-actions .btn {
    padding: 0.4rem 1rem;
    font-weight: 500;
    border-radius: var(--radius-md);
    transition: var(--transition-all);
  }

  .review-actions .btn:hover {
    transform: translateY(-1px);
    box-shadow: var(--shadow-sm);
  }

  /* Enhanced Media Queries */
  @media screen and (min-width: 1400px) {
    .main-image {
      height: 550px;
    }

    .listing-title {
      font-size: 2rem;
    }
  }

  @media screen and (min-width: 1200px) and (max-width: 1399.98px) {
    .main-image {
      height: 500px;
    }
  }

  @media screen and (min-width: 992px) and (max-width: 1199.98px) {
    .main-image {
      height: 450px;
    }

    .amenities-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
  }
  @media screen and (max-width: 992px) {
    .booking-info-inline,
    .things-to-know-inline {
      padding: 1.25rem;
    }
  }

  @media screen and (min-width: 769px) and (max-width: 991.98px) {
    .main-image {
      height: 380px;
    }

    .listing-title {
      font-size: 1.65rem;
    }
  }
  @media screen and (max-width: 768px) {
    .main-image {
      height: 300px;
    }

    .listing-subheader {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .rating-bars {
      grid-template-columns: 1fr;
    }

    .listing-title {
      font-size: 1.6rem;
    }

    .listing-host {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .host-avatar {
      margin: 0 auto;
    }

    .highlight-item {
      padding: 0.75rem;
    }

    .amenities-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 0.75rem;
    }

    .amenity-item {
      font-size: 0.9rem;
    }

    .info-group h4 {
      font-size: 1.1rem;
    }

    .review-item {
      padding: 1.25rem;
    }

    .things-to-know-inline {
      padding: 1.5rem;
    }
  }

  @media screen and (min-width: 577px) and (max-width: 767.98px) {
    .gallery-action-btn {
      padding: 0.45rem 0.9rem;
      font-size: 0.9rem;
    }
  }

  @media screen and (max-width: 576px) {
    .main-image {
      height: 250px;
    }

    .gallery-action-btn {
      right: 10px;
      bottom: 10px;
      padding: 0.4rem 0.8rem;
      font-size: 0.85rem;
    }

    .listing-title {
      font-size: 1.5rem;
    }

    .host-label {
      font-size: 1.1rem;
    }

    .listing-highlights {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .amenities-grid {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }

    .review-card {
      padding: 1.25rem;
    }

    .review-date {
      font-size: 0.8rem;
    }

    .review-content {
      font-size: 0.95rem;
    }
  }

  @media screen and (max-width: 375.98px) {
    .main-image {
      height: 200px;
    }

    .listing-title {
      font-size: 1.35rem;
    }

    .gallery-action-btn {
      padding: 0.35rem 0.7rem;
      font-size: 0.8rem;
    }

    .host-label {
      font-size: 1rem;
    }

    .host-info {
      font-size: 0.85rem;
    }

    .review-title {
      font-size: 1.3rem;
    }

    .starability-result {
      height: 25px;
    }
