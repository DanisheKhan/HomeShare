<% layout("layouts/boilerplate.ejs") %>

<style>
  .listings-section {
    padding: 1rem 0 3rem;
  }
  /* Mobile container optimizations */
  @media (max-width: 575.98px) {
    .listings-section {
      padding: 0.5rem 0 1.5rem;
    }

    .listings-header {
      margin-bottom: 1rem;
      padding: 0 0.25rem;
    }

    .listings-title {
      font-size: 1.4rem;
      margin-bottom: 0.3rem;
    }

    .listings-subtitle {
      font-size: 0.95rem;
      padding: 0 0.25rem;
    }
  }

  @media (max-width: 375px) {
    .listings-section {
      padding: 0.375rem 0 1.25rem;
    }

    .listings-title {
      font-size: 1.25rem;
    }

    .listings-subtitle {
      font-size: 0.9rem;
    }
  }

  .listings-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .listings-title {
    font-weight: 700;
    color: var(--secondary-color);
    margin-bottom: 0.5rem;
  }

  .listings-subtitle {
    color: var(--text-muted);
    font-size: 1.1rem;
    max-width: 600px;
    margin: 0 auto;
  }

  .filters-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    position: relative;
  }

  .filters-scroll-container {
    flex: 1;
    overflow: hidden;
    position: relative;
  }

  #filters {
    display: flex;
    flex-wrap: nowrap;
    align-items: center;
    overflow-x: auto;
    scroll-behavior: smooth;
    padding: 1rem 0;
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* IE and Edge */
    gap: 1rem;
  }

  #filters::-webkit-scrollbar {
    display: none; /* Chrome, Safari and Opera */
  }

  .filter {
    flex: 0 0 auto;
    text-align: center;
    padding: 0.75rem 0.5rem;
    border-radius: var(--radius-md);
    opacity: 0.8;
    transition: var(--transition);
    min-width: 80px;
    cursor: pointer;
  }

  .filter:hover,
  .filter.active {
    opacity: 1;
    background-color: #f8f9fa;
    transform: translateY(-3px);
  }

  .filter.active {
    border-bottom: 2px solid var(--primary-color);
  }

  .filter-icon {
    margin-bottom: 0.5rem;
    font-size: 1.4rem;
    color: var(--secondary-color);
  }

  .filter p {
    font-size: 0.85rem;
    font-weight: 500;
    margin: 0;
  }

  .filters-nav {
    position: absolute;
    top: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 10;
  }

  .filters-nav-btn {
    pointer-events: auto;
    background-color: white;
    border: 1px solid var(--border-color);
    border-radius: 50%;
    width: 32px;
    height: 32px;
    display: flex;
    justify-content: center;
    align-items: center;
    cursor: pointer;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    transition: var(--transition);
  }

  .filters-nav-btn:hover {
    background-color: var(--light-color);
  }

  .filters-prev {
    margin-left: -16px;
  }

  .filters-next {
    margin-right: -16px;
  }

  .filters-utilities {
    display: flex;
    align-items: center;
    margin-left: 1rem;
  }

  .tax-toggle {
    border: 1px solid var(--border-color);
    padding: 0.7rem 1rem;
    border-radius: var(--radius-md);
    display: flex;
    align-items: center;
    background-color: white;
    box-shadow: var(--shadow-sm);
    transition: var(--transition);
  }

  .tax-toggle:hover {
    box-shadow: var(--shadow-md);
  }

  .tax-info {
    display: none;
  }

  /* Add styling for form switch */
  .form-check-input:checked {
    background-color: var(--primary-color);
    border-color: var(--primary-color);
  }
  .card-grid {
    display: grid;
    gap: 1.5rem;
    margin-top: 2rem;
    width: 100%;
  }

  .no-results {
    text-align: center;
    padding: 4rem 1rem;
    background-color: #f8f9fa;
    border-radius: var(--radius-lg);
    margin: 2rem 0;
  }

  .no-results-icon {
    font-size: 4rem;
    color: var(--text-muted);
    margin-bottom: 1rem;
  }

  .no-results h3 {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--secondary-color);
  }

  .no-results p {
    color: var(--text-muted);
    font-size: 1.1rem;
    max-width: 500px;
    margin: 0 auto 1.5rem;
  }
  @media screen and (max-width: 992px) {
    .filters-container {
      flex-direction: column;
      align-items: stretch;
    }

    .filters-utilities {
      margin-left: 0;
      margin-top: 1rem;
      justify-content: center;
    }

    .tax-toggle {
      margin: 0;
    }
  }

  @media screen and (max-width: 576px) {
    .listings-title {
      font-size: 1.5rem;
    }

    .listings-subtitle {
      font-size: 1rem;
    }

    .filter {
      min-width: 70px;
      padding: 0.5rem 0.25rem;
    }

    .filter-icon {
      font-size: 1.2rem;
    }

    .filter p {
      font-size: 0.75rem;
    }
  }

  @media screen and (max-width: 375px) {
    .listings-title {
      font-size: 1.35rem;
    }
  }
</style>

<section class="listings-section">
  <div class="listings-header mb-4">
    <% if(typeof searchQuery !== 'undefined' && searchQuery) { %>
    <h1 class="listings-title">Search Results: "<%= searchQuery %>"</h1>
    <p class="listings-subtitle">
      <%= allListings.length %> <%= allListings.length === 1 ? 'property' :
      'properties' %> found
    </p>
    <% } else { %>
    <h1 class="listings-title">Explore Destinations</h1>
    <p class="listings-subtitle">
      Discover unique places to stay around the world
    </p>
    <% } %>
  </div>
  <!-- Location Filters -->

  <% if(allListings.length === 0) { %>
  <div class="no-results">
    <div class="no-results-icon">
      <i class="fa-solid fa-house-circle-xmark"></i>
    </div>
    <h3>No listings found</h3>
    <p>Try adjusting your search criteria or explore different locations</p>
    <a href="/listings" class="btn btn-primary mt-3">View all listings</a>
  </div>
  <% } else { %>
  <div class="container-fluid px-0">
    <div class="card-grid">
      <% for (let listing of allListings) { %>
      <div class="card listing-card card-hover-effect">
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <div class="card-img-container card-img-animation">
            <img
              src="<%= listing.image.url %>"
              class="card-img-top"
              alt="<%= listing.title %>"
              loading="lazy"
            />
            <div class="card-badge">
              <i class="fa-solid fa-location-dot me-1"></i><%= listing.location
              %>
            </div>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= listing.title %></h5>
            <p class="card-text"><%= listing.description %></p>
            <div class="card-meta">
              <div class="d-flex align-items-center">
                <span class="rating me-2">
                  <i class="fa-solid fa-star"></i> 4.8
                </span>
                <span class="reviews">(42 reviews)</span>
              </div>
            </div>
            <p class="card-price">
              <span class="price-amount"
                >â‚¹<%= listing.price.toLocaleString("en-IN") %></span
              >
              / night
              <span class="tax-info badge rounded-pill text-bg-light"
                >+ 18% tax</span
              >
            </p>
          </div>
        </a>
      </div>
      <% } %>
    </div>
  </div>
  <% } %>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      // Tax toggle functionality
      const taxSwitch = document.getElementById("flexSwitchCheckDefault");
      if (taxSwitch) {
        taxSwitch.addEventListener("click", () => {
          const taxInfo = document.getElementsByClassName("tax-info");
          for (let info of taxInfo) {
            info.style.display =
              info.style.display !== "inline" ? "inline" : "none";
          }
        });
      }

      // Filter scrolling with buttons
      const filterContainer = document.getElementById("filters");
      const prevBtn = document.querySelector(".filters-prev");
      const nextBtn = document.querySelector(".filters-next");

      if (filterContainer && prevBtn && nextBtn) {
        const scrollAmount = 300;

        prevBtn.addEventListener("click", function () {
          filterContainer.scrollBy({ left: -scrollAmount, behavior: "smooth" });
        });

        nextBtn.addEventListener("click", function () {
          filterContainer.scrollBy({ left: scrollAmount, behavior: "smooth" });
        }); // Handle filter selection
        const filters = document.querySelectorAll(".filter");
        const listingCards = document.querySelectorAll(".listing-card");

        filters.forEach((filter) => {
          filter.addEventListener("click", function () {
            // Remove active class from all filters
            filters.forEach((f) => f.classList.remove("active"));

            // Add active class to clicked filter
            this.classList.add("active");

            // Get filter value
            const filterValue = this.getAttribute("data-filter");

            // Get current search query from URL if any
            const currentUrl = new URL(window.location.href);
            const searchQuery = currentUrl.searchParams.get("search") || "";

            // Add filter to URL and redirect
            if (filterValue !== "all") {
              currentUrl.searchParams.set("filter", filterValue);
              window.location.href = currentUrl.toString();
            } else {
              // If 'all' is selected, remove filter parameter
              currentUrl.searchParams.delete("filter");
              window.location.href = currentUrl.toString();
            }
          });
        });
      }
    });
  </script>
</section>
